@page
@model ForgotPasswordModel

<div class="container bg-white my-5 rounded" style="width: 500px; padding: 30px 50px;">
    <h2 class="text-center font-weight-lighter" style="margin-bottom: 30px">
        Forgot your password?
    </h2>
    
    <p class="font-weight-light">Enter your email, and we'll send you a password reset link.</p>

    <form method="post" id="loginField">
        <div asp-validation-summary="All" class="text-danger"></div>
            
        <input type="email" name="email" id="username" class="form-control mb-4" placeholder="Email">
        
        <button class="btn btn-primary btn-block my-4 debounce" type="submit" id="recaptcha">Reset Password</button>
        @* @Html.AntiForgeryToken() *@
    </form>
    
    <p class="font-weight-light">Dont have an account? <a asp-page="Signup">Sign up for free!</a></p>
</div>